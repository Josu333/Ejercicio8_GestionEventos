<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.MenuOpciones"
    android:background="@color/celeste">

    <TextView
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENÃš OPCIONES"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btnAlta"></TextView>

    <Button
        android:id="@+id/btnAlta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALTA EVENTO"
        app:layout_constraintTop_toBottomOf="@id/cabecera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60sp"></Button>

    <Button
        android:id="@+id/btnModif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MODIFICAR EVENTO"
        app:layout_constraintTop_toBottomOf="@id/btnAlta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60sp"
        android:backgroundTint="@color/teal_700"></Button>

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONSULTAR EVENTO"
        app:layout_constraintTop_toBottomOf="@id/btnModif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60sp"
        android:backgroundTint="@color/purple_200"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>